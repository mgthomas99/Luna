
class "Boolean" {

  static = {
    isBoolean = function(any)
      return type(any) == "boolean"
    end,

    parse = function(any)
      if (Boolean.isBoolean(any)) then
        return any
      end
      return false
    end
  },

  new = function(self, value)
    self.__value = Boolean.parse(value)
  end,

  toBoolean = function(self)
    return self.__value
  end

}
